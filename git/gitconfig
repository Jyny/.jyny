[user]
	name = Jerry Y. Chen
	email = chen@jyny.dev

[merge]
	tool = vimdiff

[alias]
	dag = log --decorate --abbrev-commit --graph

[gpg]
	format = ssh

[gpg "ssh"]
	defaultKeyCommand = sh -c 'echo key::$(ssh-add -L)'

[commit]
	gpgSign = true

[tag]
	gpgSign = true

[url "git@github.com:"]
	insteadOf = https://github.com/

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
